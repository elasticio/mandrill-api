{
    "apiVersion": "1.0",
    "swaggerVersion": "1.1",
    "basePath": "https://mandrillapp.com/api/1.0/",
    "resourcePath": "/webhooks",
    "apis": [
        {
            "path": "{{WEBHOOK_URI}}",
            "description": "Webhook resources",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Register Webhook",
                    "responseClass": "WebhookPayload",
                    "nickname": "newWebhook"
                }
            ]
        },
        {
            "path": "/webhooks/add.json",
            "description": "Webhook resources",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Register Webhook",
                    "responseClass": "AddWebhookResponse",
                    "nickname": "registerWebhook",
                    "subscribe": "newWebhook",
                    "snapshot" : {
                        "id": "id"
                    },
                    "parameters": [
                        {
                            "name": "url",
                            "description": "Webhook URL",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string",
                            "viewClass": "HiddenFieldView"
                        },
                        {
                            "name": "events",
                            "description": "Events",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string",
                            "allowableValues":{
                                "valueType":"LIST",
                                "values":[
                                    "send",
                                    "open",
                                    "click",
                                    "spam",
                                    "reject",
                                    "unsub",
                                    "deferral",
                                    "hard_bounce",
                                    "soft_bounce"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "path": "/webhooks/delete.json",
            "description": "Webhook resources",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Remove Webhook",
                    "responseClass": "void",
                    "nickname": "removeWebhook",
                    "unsubscribe": "newWebhook",
                    "parameters": [
                        {
                            "name": "id",
                            "description": "Webhook ID",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "AddWebhookResponse": {
            "id": "AddWebhookResponse",
            "type": "object",
            "properties": {
                "id": {
                    "title": "Id",
                    "type": "string",
                    "required":true
                },
                "url": {
                    "title": "URL",
                    "type": "string",
                    "required":true
                }
            }
        },
        "WebhookPayload": {
            "id": "WebhookPayload",
            "type": "object",
            "properties": {
                "mandrill_events": {
                    "type": "array",
                    "required":true,
                    "properties": {
                        "event": {
                            "title": "Event",
                            "type": "string",
                            "required":true
                        },
                        "ts": {
                            "title": "Timestamp",
                            "type": "string",
                            "required":true
                        },
                        "msg": {
                            "title": "Message",
                            "type": "object",
                            "properties": {
                                "subject": {
                                    "title": "Subject",
                                    "type": "string",
                                    "required":true
                                },
                                "email": {
                                    "title": "Email",
                                    "type": "string",
                                    "required":true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}